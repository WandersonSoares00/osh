
input            : io-redirect
                 | command-io-list
                 | command-io-list '&'

command-io-list  : command
                 | command io-redirect
                 | command-io-list command-sep command-io-list

command          : COMMAND
                 | COMMAND command-opts
                 | command PIPE command

command-opts     : OPT
                 | OPT command-opts

command-sep      : ';'
                 | '&&'
                 | '||'

io-redirect      : io-file
                 | IO_NUMBER io-file

io-file          : '<'  FILE_NAME
                 | '>'  FILE_NAME
                 | '>>' FILE_NAME
                 | '<>' FILE_NAME

